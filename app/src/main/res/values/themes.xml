<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.UnLuacTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_300</item>
        <item name="colorPrimaryDark">@color/teal_400</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="textColorPrimary">#212121</item>
        <item name="textColorSecondary">#757575</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item><!--可以页面拉伸到状态栏顶部-->
        <item name="strokeColor">#E0E0E0</item>
        <item name="rippleColor">#14000000</item>
        <item name="textColorImportant">@color/black</item>
        <item name="android:windowAnimationStyle">@style/alertDialogAnimation</item>
        <item name="dialogCornerRadius">6dp</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="iconTint">#8f000000</item>
        <item name="toolbarStyle">@style/Widget.Base.Toolbar</item>
        <item name="alertDialogTheme">@style/alertDialogTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.Base.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>


    <style name="alertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="alertDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="circleImageShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>